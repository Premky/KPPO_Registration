            COUNT(IF(bp.bandi_type = 'à¤¥à¥à¤¨à¥à¤µà¤¾' AND gender = 'female', 1, NULL)) AS thunuwa_female,
            COUNT(IF(bp.bandi_type = 'à¤¥à¥à¤¨à¥à¤µà¤¾' AND gender NOT IN ('male', 'female'), 1, NULL)) AS thunuwa_other,
            COUNT(IF(bp.bandi_type = 'à¤¥à¥à¤¨à¥à¤µà¤¾', 1, NULL)) AS total_thunuwa,

            COUNT(IF(gender = 'male', 1, NULL)) AS total_male,
            COUNT(IF(gender = 'female', 1, NULL)) AS total_female,

            COUNT(*) AS total_kaidibandi,

            COUNT(IF(bp.bandi_type = 'à¤•à¥ˆà¤¦à¥€' AND gender = 'male' AND age >= ${ defaultAge }, 1, NULL)) AS kaidi_male_65plus,
            COUNT(IF(bp.bandi_type = 'à¤•à¥ˆà¤¦à¥€' AND gender = 'female' AND age >= ${ defaultAge }, 1, NULL)) AS kaidi_female_65plus,
            COUNT(IF(bp.bandi_type = 'à¤¥à¥à¤¨à¥à¤µà¤¾' AND gender = 'male' AND age >= ${ defaultAge }, 1, NULL)) AS thunuwa_male_65plus,
            COUNT(IF(bp.bandi_type = 'à¤¥à¥à¤¨à¥à¤µà¤¾' AND gender = 'female' AND age >= ${ defaultAge }, 1, NULL)) AS thunuwa_female_65plus,

           -- COUNT(IF(bri.is_dependent = 1, 1, NULL)) AS aashrit,

            COUNT(IF(vbad.country_name_np != 'à¤¨à¥‡à¤ªà¤¾à¤²', 1, NULL)) AS foreign_count,
